<body class="sub_page">
  <!-- about section -->
  <section class="about_section layout_padding">
    <div class="about_container">
      <div class="d-flex justify-content-center">
        <h2 style="color: black" class="custom_heading">내 정보</h2>
      </div>
      <br />

      <div class="wrap_one">
        <div class="user_form">
          <div class="input-group mb-3">
            <span class="input-group-text">이름</span>
            <input
              id="mypage-name"
              value="<%=userInfo.name%>"
              type="text"
              class="form-control"
              aria-label="Sizing example input"
              aria-describedby="inputGroup-sizing-default"
            />
          </div>
          <div class="input-group mb-3">
            <span class="input-group-text">이메일</span>
            <input
              id="mypage-email"
              value="<%=userInfo.email%>"
              type="text"
              class="form-control"
              aria-label="Sizing example input"
              aria-describedby="inputGroup-sizing-default"
            />
          </div>
          <div class="input-group mb-3">
            <span class="input-group-text">휴대폰</span>
            <input
              id="mypage-phone"
              value="<%=userInfo.phone%>"
              type="text"
              class="form-control"
              aria-label="Sizing example input"
              aria-describedby="inputGroup-sizing-default"
            />
          </div>
          <div class="input-group mb-3">
            <span class="input-group-text">생일</span>
            <input
              id="mypage-birthday"
              value="<%=userInfo.birthday%>"
              type="text"
              class="form-control"
              aria-label="Sizing example input"
              aria-describedby="inputGroup-sizing-default"
            />
          </div>
          <div class="input-group mb-3">
            <span class="input-group-text">비밀번호</span>
            <input
              id="mypage-password"
              type="password"
              class="form-control"
              aria-label="Sizing example input"
              aria-describedby="inputGroup-sizing-default"
            />
          </div>
          <button
            id="mypage-withdrawal"
            type="button"
            class="btn btn-outline-danger"
          >
            탈퇴
          </button>
          <button
            id="real_update_button"
            type="button"
            class="btn btn-outline-dark"
          >
            수정
          </button>
        </div>
        <div class="get_data_form"></div>
      </div>
      <div class="wrap_button">
        <div></div>
        <div class="buttons">
          <button
            type="button"
            id="get-my-coupons"
            class="btn btn-outline-dark"
          >
            쿠폰
          </button>
          <button
            type="button"
            id="get-my-reviews"
            class="btn btn-outline-dark"
          >
            내 리뷰
          </button>
          <button type="button" id="get-my-orders" class="btn btn-outline-dark">
            예약확인
          </button>
        </div>
      </div>
    </div>
  </section>
</body>
<style>
  .get_data_form {
    width: 100%;
    height: auto;
    border: 1px black solid;
  }
  .wrap_one {
    display: flex;
    margin: 5px;
    width: 100%;
    height: auto;
    border: 1px black solid;
  }
  .wrap_one > .user_form {
    width: 400px;
  }
  .wrap_button > .buttons {
    margin: 2px;
    float: right;
  }
</style>

<script src="/js/mypage.js"></script>
<script>
  console.log('<%=userInfo%>');

  getMyCoupons.addEventListener('click', () => {
    try {
      axios
        .get(`/api/coupon/mycoupon/<%=userInfo.id%>`, {})
        .then((response) => {
          document.querySelector('.get_data_form').innerHTML = '';
          console.log(response.data);
          let temp_html = `
          <div class="get_coupon_data_form">
            <table class="table">
              <thead>
                <tr>
                  
                  <th scope="col">쿠폰명</th>
                  <th scope="col">사용여부</th>
                  <th scope="col">만료일</th>
                </tr>
              </thead>
              <tbody id="mycoupons">

              </tbody>
            </table>
          </div>`;
          document
            .querySelector('.get_data_form')
            .insertAdjacentHTML('beforeend', temp_html);
          for (let i = 0; i < response.data.length; i++) {
            let temp_html = `<tr>
                  
                  <th>${response.data[i].couponId}</th>
                  <th>${response.data[i].isUsed}</th>
                  <th>${response.data[i].endDate}</th>
                </tr>`;
            document
              .querySelector('#mycoupons')
              .insertAdjacentHTML('beforeend', temp_html);
          }
        })
        .catch((error) => alert(error.response.data.message));
    } catch (error) {
      console.error(error.message);
    }
  });
  getMyReviews.addEventListener('click', () => {
    try {
      axios
        .get(`/api/reviews/myreview/<%=userInfo.userId%>`, {})
        .then((response) => {
          document.querySelector('.get_data_form').innerHTML = '';
          console.log(response.data);
          let temp_html = `
          <div class="get_review_data_form">
            <table class="table">
              <thead>
                <tr>
                  <th>번호</th>
                  <th>제목</th>
                  <th>상세보기</th>
                </tr>
              </thead>
              <tbody id="myreviews">

              </tbody>
            </table>
          </div>`;
          document
            .querySelector('.get_data_form')
            .insertAdjacentHTML('beforeend', temp_html);
          for (let i = 0; i < response.data.length; i++) {
            let temp_html = `<tr>
                  <th scope="row">${i + 1}</th>
                  <td>${response.data[i].title}</td>
                  <td><button type="button" class="btn btn-outline-dark">>_<</button></td>
                </tr>`;
            document
              .querySelector('#myreviews')
              .insertAdjacentHTML('beforeend', temp_html);
          }
        })
        .catch((error) => alert(error.response.data.message));
    } catch (error) {
      console.error(error.message);
    }
  });
  getMyOrders.addEventListener('click', () => {
    try {
      axios
        .get(`/api/orders/<%=userInfo.id%>`, {})
        .then((response) => {
          document.querySelector('.get_data_form').innerHTML = '';

          console.log(response.data);
          let temp_html = `
          <div class="get_order_data_form">
            <table class="table">
              <thead>
                <tr>
                  
                  <th scope="col">캠프번호</th>
                  <th scope="col">총액</th>
                  <th scope="col">예약일</th>
                  <th scope="col">상세보기</th>
                </tr>
              </thead>
              <tbody id="myorders">

              </tbody>
            </table>
          </div>`;
          document
            .querySelector('.get_data_form')
            .insertAdjacentHTML('beforeend', temp_html);
          for (let i = 0; i < response.data.length; i++) {
            let time = response.data[i].selectedDay.split('T', 1);
            let temp_html = `<tr>
                  
                  <th>${response.data[i].campId}번</th>
                  <th>${response.data[i].receipt}원</th>
                  <th>${time}</th>
                  <td><button type="button" class="btn btn-outline-dark">>_<</button></td>
                </tr>`;
            document
              .querySelector('#myorders')
              .insertAdjacentHTML('beforeend', temp_html);
          }
        })
        .catch((error) => alert(error.response.data.message));
    } catch (error) {
      console.error(error.message);
    }
  });
</script>
