<body class="sub_page">
  <!-- about section -->
  <section class="about_section layout_padding">
    <div class="about_container">
      <div class="d-flex justify-content-center">
        <h2 style="color: black" class="custom_heading">내 정보</h2>
      </div>
      <br />

      <div class="wrap_one">
        <div class="user_form">
          <div class="input-group mb-3">
            <span class="input-group-text">이름</span>
            <input
              id="mypage-name"
              value="<%=userInfo.name%>"
              type="text"
              class="form-control"
              aria-label="Sizing example input"
              aria-describedby="inputGroup-sizing-default"
            />
          </div>
          <div class="input-group mb-3">
            <span class="input-group-text">이메일</span>
            <input
              id="mypage-email"
              value="<%=userInfo.email%>"
              type="text"
              class="form-control"
              aria-label="Sizing example input"
              aria-describedby="inputGroup-sizing-default"
            />
          </div>
          <div class="input-group mb-3">
            <span class="input-group-text">휴대폰</span>
            <input
              id="mypage-phone"
              value="<%=userInfo.phone%>"
              type="text"
              class="form-control"
              aria-label="Sizing example input"
              aria-describedby="inputGroup-sizing-default"
            />
          </div>
          <div class="input-group mb-3">
            <span class="input-group-text">생일</span>
            <input
              id="mypage-birthday"
              value="<%=userInfo.birthday%>"
              type="text"
              class="form-control"
              aria-label="Sizing example input"
              aria-describedby="inputGroup-sizing-default"
            />
          </div>
          <div class="input-group mb-3">
            <span class="input-group-text">비밀번호</span>
            <input
              id="mypage-password"
              type="password"
              class="form-control"
              aria-label="Sizing example input"
              aria-describedby="inputGroup-sizing-default"
            />
          </div>
          <button
            id="mypage-withdrawal"
            type="button"
            class="btn btn-outline-danger"
          >
            탈퇴
          </button>
          <button
            id="real_update_button"
            type="button"
            class="btn btn-outline-dark"
          >
            수정
          </button>
        </div>
        <div class="coupon_form">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">내 쿠폰</th>
                <th scope="col">쿠폰명</th>
                <th scope="col">사용여부</th>
                <th scope="col">만료일</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <th scope="row">1</th>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      <div class="wrap_button">
        <div></div>
        <div class="buttons">
          <button
            type="button"
            id="get-my-coupons"
            class="btn btn-outline-dark"
          >
            쿠폰
          </button>
          <button
            type="button"
            id="get-my-reviews"
            class="btn btn-outline-dark"
          >
            내 리뷰
          </button>
          <button type="button" id="get-my-orders" class="btn btn-outline-dark">
            예약확인
          </button>
        </div>
      </div>
    </div>
  </section>
</body>
<style>
  .coupon_form {
    width: 100%;
    height: auto;
    border: 1px black solid;
  }
  .wrap_one {
    display: flex;
    margin: 5px;
    width: 100%;
    height: auto;
    border: 1px black solid;
  }
  .wrap_button > .buttons {
    margin: 2px;
    float: right;
  }
</style>

